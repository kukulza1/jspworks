<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>

<body>

   <!-- 선언문 태그 -->
   <%!
     //전역변수
     int pagecount =0;
   
     //함수
     void addCount(){
    	 pagecount++;
     }
   %>
   
   <%
     //함수 호출
    addCount();
   %>
   <p>이 사이트 방문은<%=pagecount %> 번째 입니다</p>
</body>